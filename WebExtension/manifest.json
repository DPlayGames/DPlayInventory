{
	"manifest_version" : 2,
	"name" : "DPlay Inventory",
	"version" : "0.1",
	"description" : "DPlay Inventory",
	"browser_action" : {
		"default_popup" : "index.html"
	},
	"permissions" : [
		"storage"
	],
	"background" : {
		"scripts" : [
			"BACKGROUND.js"
		]
	},
	"content_scripts" : [{
		"js" : [
			"CONTENT.js"
		],
		"matches" : [
			"file://*/*",
			"http://*/*",
			"https://*/*"
		],
		"run_at": "document_start",
		"all_frames": true
	}],
	"web_accessible_resources" : [
		"popup/login.html",
		"popup/sign-text.html",
		"popup/sign-transaction.html"
	]
}